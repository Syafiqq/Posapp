<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CheckBarang">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Barang"
        android:id="@+id/btn_check"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_check">

        <TextView
            android:text="Nama Barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namaBarang" />
        <TextView
            android:text="Letak Barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/letakBarang" />
        <TextView
            android:text="Spesifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spesifikasiBarang" />
        <TextView
            android:text="Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hargaBarang" />
        <TextView
            android:text="Stok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stokBarang" />
    </LinearLayout>
</RelativeLayout>
